  "custom/tdp": {
    "format": "{icon}",
    "interval": 30,
    "exec": "sudo /usr/libexec/rotatetdp.sh 2>/dev/null",
    "return-type": "json",
    "on-click": "sudo /usr/libexec/rotatetdp.sh rotate; pkill -RTMIN+10 waybar",
    "format-icons": [ "ÔÅ¨", "Ôâé", "ÔÉß", "‚úä" ],
